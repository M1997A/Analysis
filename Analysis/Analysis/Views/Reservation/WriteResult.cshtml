@model WriteResultsVM
@{
}
<div class="container">
    <div class="row border border-secondary bg-light m-2 p-3">

        <div class="col-4"><strong>Name: </strong>@Model.ClientName</div>
        <div class="col-6"><strong>Analysis Type: </strong>@Model.AnalysisName</div>

    </div>
    <form method="post" asp-action="SaveResult">
        <input type="hidden" name="ClientAnalysisId" value="@Model.ClientAnalysisId" />
        <table class="table">
            <thead class="thead-dark bg-dark text-white">
                <tr>
                    <td>Name</td>
                    <td>Value</td>
                    <td>Unit</td>
                    <td>Normal Range</td>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0; }
                @if (Model.AnalysisFeatures.Count() == 0)
                {
                    <tr><td colspan="4" class="text-center">There are no features for this analysis. add features first</td></tr>

                }

                else
                {




                    @foreach (var item in Model.AnalysisFeatures)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>

                                <input name="[@i].AnalysisFeaturesId" type="hidden" value="@item.Id" class="form-control" />
                                <input type="text" name="[@i].Value" class="form-control" />
                            </td>
                            <td>@item.MeasruingUnit</td>
                            <td>@item.NormalRange</td>
                        </tr>
                        { i++; }
                    }

                    <tr><td>
                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                        <a asp-action="ClientsList" class="btn btn-sm btn-warning">Cancel</a>
                        </td></tr>
                }
            </tbody>
        </table>

    </form>
</div>