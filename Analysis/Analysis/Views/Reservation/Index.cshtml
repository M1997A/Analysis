<div>
    <div class="jumbotron bg-light">
        @if (TempData["ClientCode"] != null)
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span id="printableArea"> @TempData["ClientCode"]</span>


                <button type="button" onclick="printDiv('printableArea')" class="btn btn-sm btn-secondary float-right" aria-label="Close">
                    <span aria-hidden="true">Print</span>
                </button>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>
        }

    </div>
    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">
                    <h3 class="text-center"><a asp-action="Reserve">Reserve</a></h3>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">
                    <h3 class="text-center"><a asp-action="ClientsList">Write Results</a></h3>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-body">
                    <h3 class="text-center"><a asp-action="ClientResult" asp-controller="Home">Show Results</a></h3>
                </div>
            </div>
        </div>
    </div>





