@model Client
@{
}
<div class="container">
    <div class="alert alert-danger bg-dark text-white text-center"><h3>New Reservation</h3></div>
    <form method="post" asp-action="EditClient">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="Gender" value="@Model.Gender"/>
        <input type="hidden" name="ClientCode" value="@Model.ClientCode"/>
        <div class="row m-2">

            <div class="col-5">

                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon1">Name</span>
                    </div>
                    <input asp-for="Name" class="form-control" aria-describedby="basic-addon1">
                </div>
                <div><span asp-validation-for="Address" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon2">Address</span>
                    </div>
                    <input asp-for="Address" class="form-control" aria-describedby="basic-addon2">
                </div>
                <div><span asp-validation-for="Age" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon3">Age</span>
                    </div>
                    <input asp-for="Age" class="form-control" aria-describedby="basic-addon3">
                </div>

                <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon5">Phone</span>
                    </div>
                    <input asp-for="PhoneNumber" class="form-control" aria-describedby="basic-addon5">
                </div>

                <div><span asp-validation-for="Diseases" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon6">Diseases</span>
                    </div>
                    <input asp-for="Diseases" class="form-control" aria-describedby="basic-addon6">
                </div>

            </div>
            <div class="col-1"></div>
            <div class="col-5">

                <div><span asp-validation-for="Doctor" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon7">Doctor</span>
                    </div>
                    <input asp-for="Doctor"  class="form-control" aria-describedby="basic-addon7">
                </div>

                <div><span asp-validation-for="RecievedDate" class="text-danger"></span></div>
                <div class="input-group mb-3">

                    <div class="input-group-prepend">
                        <span class="input-group-text" style="width:80px" id="basic-addon8">Date</span>
                    </div>
                    <input type="date" asp-for="RecievedDate" class="form-control" aria-describedby="basic-addon8">
                </div>

               
               
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-block btn-success" type="submit">Edit</button>
                        </div>
                        <div class="col-6">
                            <a class="btn btn-block btn-warning"  asp-action="AllClients">Cancel</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </form>
</div>
