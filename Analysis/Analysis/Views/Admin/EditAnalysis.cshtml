@model AnalysisType
@{
}
<div class="container">
    <div class="row m-2">
        <div class="col-3"></div>
        <div class="col-md-6 alert alert-dark bg-dark text-center text-white"><h3>Edit @Model.Name</h3></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">


            <form asp-action="EditAnalysis" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group">

                    <label asp-for="Name"></label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Duration"></label>

                    <input asp-for="Duration" class="form-control" />
                </div>
                <div class="form-group">

                    <label asp-for="SampleType"></label>
                    <div><span asp-validation-for="SampleType" class="text-danger"></span></div>
                    <input asp-for="SampleType" class="form-control" />
                </div>
                <div class="form-group">

                    <label asp-for="Price"></label>
                    <div> <span asp-validation-for="Price" class="text-danger"></span></div>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Precautions"></label>
                    <input asp-for="Precautions" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="AllAnalysis" class="btn btn-warning">Cancel</a>
                </div>

            </form>

        </div>
    </div>
</div>