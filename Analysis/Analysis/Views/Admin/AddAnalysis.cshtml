@model AnalysisType
@{
}
<div class="container">
    @*<div class="alert alert-dark text-center text-dark"><h3>Add Analysis</h3></div>*@
    <div class="row m-2">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="alert alert-dark bg-dark text-center text-white rounded-pill"><h3>Add new analysis</h3></div>

            <form asp-action="AddAnalysis" method="post" class="border border-dark p-2 rounded">


                <div class="form-group ">

                    <label asp-for="Name"></label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control rounded-pill" />
                </div>
                <div class="form-group">
                    <label asp-for="Duration"></label>
                   
                    <input asp-for="Duration" class="form-control rounded-pill" />
                </div>
                <div class="form-group">

                    <label asp-for="SampleType"></label>
                    <div><span asp-validation-for="SampleType" class="text-danger"></span></div>
                    <input asp-for="SampleType" class="form-control rounded-pill" />
                </div>
                <div class="form-group">
                    
                    <label asp-for="Price"></label>
                    <div> <span asp-validation-for="Price" class="text-danger"></span></div>
                    <input asp-for="Price" class="form-control rounded-pill" />
                </div>
                <div class="form-group">
                    <label asp-for="Precautions"></label>
                    <input asp-for="Precautions" class="form-control rounded-pill" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>

            </form>

        </div>
    </div>
</div>