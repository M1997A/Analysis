@model IEnumerable<AnalysisType>
@{

}
<div class="container">
    <div class="alert alert-dark text-center text-dark"><h3>All Analysis</h3></div>
    @TempData["typeId"]
    <a class="btn btn-success text-white" asp-action="AddAnalysis">Add Analysis</a>

    <table class="table">
        <thead class="thead-dark bg-dark text-white">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Type of Sample</td>
                <td>Price</td>
                <td>Duration</td>
                <td>Precautions</td>
                <td class="text-center">Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">No Analysis</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.SampleType</td>
                        <td>@item.Price $</td>
                        <td>@item.Duration day</td>
                        <td>@item.Precautions</td>
                        <td class="text-center">
                            <form asp-action="DeleteAnalysis" method="post">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <a asp-action="Features" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Features</a>
                                <a asp-action="EditAnalysis" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
