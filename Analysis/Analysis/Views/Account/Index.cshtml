@model IEnumerable<IdentityUser>
@{

}
<div class="container">
    
    <a class="btn btn-success text-white" asp-action="CreateUser">Add User</a>
    <hr />
    <table class="table">
        <thead class="thead-dark bg-dark text-white">
            <tr>
                <td>Name</td>
                <td>Is Admin</td>                
                <td class="text-center">Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">No Users</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td is-admin="@item.Id"></td>
                        <td class="text-center">
                            <form asp-action="DeleteUser" method="post">
                                <input type="hidden" name="Id" value="@item.Id"/>
                                <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
